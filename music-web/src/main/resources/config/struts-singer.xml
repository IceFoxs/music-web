<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="singer" namespace="/" extends="struts-base">
		<!-- 歌手管理action -->
		<action name="singer_*" class="singerAction" method="{1}">
			<result name="list">/WEB-INF/views/front/singer/list.jsp</result>
			<result name="listForSearch">/WEB-INF/views/front/singer/listForSearch.jsp</result>
			<result name="view">/WEB-INF/views/front/singer/view.jsp</result>
			<result name="songList">/WEB-INF/views/front/singer/songList.jsp</result>
			<result name="albumList">/WEB-INF/views/front/singer/albumList.jsp</result>
			<result name="intro">/WEB-INF/views/front/singer/intro.jsp</result>
		</action>		
	</package>
</struts>